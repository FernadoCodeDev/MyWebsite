---
import "../styles/global.css";

import SVGhtml from "../../assets/svg/html";
import SVGcss from "../../assets/svg/css";
import SVGSass from "../../assets/svg/sass";
import SVGJS from "../../assets/svg/js";
import SVGTS from "../../assets/svg/ts";
import SVGJquery from "../../assets/svg/Jquery";
import SVGBootstrap from "../../assets/svg/Bootstrap";
import SVGRedux from "../../assets/svg/Redux";
import SVGReact from "../../assets/svg/svgreact";
import SVGastro from "../../assets/svg/astro";
import SVGTailwind from "../../assets/svg/Tailwind";
import SVGVite from "../../assets/svg/Vite";
---

<div id="page-1" class="grid grid-cols-1 gap-4">
  <h2 class="text-2xl font-bold text-center md:text-4xl">Front-End</h2>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-orange-300 rounded-full"
      >
        <SVGhtml />
      </div>

      <h1 class="font-bold">HTML</h1>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-4 bg-indigo-300 rounded-full"
      >
        <SVGcss />
      </div>

      <h3 class="font-bold">CSS</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-pink-300 rounded-full"
      >
        <SVGSass />
      </div>

      <h3 class="font-bold">Sass</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-yellow-300 rounded-full"
      >
        <SVGJS />
      </div>

      <h3 class="font-bold">JavaScript</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-sky-300"
      >
        <SVGTS />
      </div>

      <h3 class="font-bold">TypeScript</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-cyan-300"
      >
        <SVGJquery />
      </div>

      <h3 class="font-bold">Jquery</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-violet-300"
      >
        <SVGBootstrap />
      </div>

      <h3 class="font-bold">Bootstrap</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-purple-300 rounded-full"
      >
        <SVGRedux />
      </div>

      <h3 class="font-bold">Redux</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-sky-300"
      >
        <SVGReact />
      </div>

      <h3 class="font-bold">React</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-orange-300 rounded-full"
      >
        <SVGastro />
      </div>
      <h1 class="font-bold">Astro</h1>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-cyan-300"
      >
        <SVGTailwind />
      </div>

      <h3 class="font-bold">Tailwind</h3>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-violet-300"
      >
        <SVGVite />
      </div>

      <h3 class="font-bold">Vite</h3>
    </div>
  </div>
</div>
