---
import "../styles/global.css";

import SVGdocker from "../../assets/svg/docker";
import SVGWordPress from "../../assets/svg/wordpressSVG";
---

<div id="page-4" class="grid grid-cols-1 gap-4">
  <h2 class="text-2xl font-bold text-center md:text-4xl">Aprendiendo</h2>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-sky-700"
      >
        <SVGWordPress />
      </div>
      <h1 class="font-bold">WordPress</h1>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-blue-300 rounded-full"
      >
        <SVGdocker />
      </div>
      <h1 class="font-bold">Docker</h1>
    </div>
  </div>
</div>
