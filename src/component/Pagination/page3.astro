---
import "../../styles/global.css";

import SVGmysql from "../../assets/svg/mysql";
import SVGsqlite from "../../assets/svg/sqlite";
import SVGpostgresql from "../../assets/svg/postgresql";
---

<div id="page-3" class="grid grid-cols-1 gap-4">
  <h2 class="text-2xl font-bold text-center md:text-4xl">Base de datos</h2>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-4 bg-orange-300 rounded-full"
      >
        <SVGmysql />
      </div>
      <h1 class="font-bold">MySQL</h1>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 rounded-full bg-sky-300"
      >
        <SVGsqlite />
      </div>
      <h1 class="font-bold">SQlite</h1>
    </div>

    <div
      class="flex flex-col items-center justify-center h-auto gap-4 p-4 text-center shadow-xl bg-slate-100 dark:bg-neutral-800 dark:shadow-neutral-700/40"
    >
      <div
        class="flex flex-col items-center justify-center w-20 h-20 p-3 bg-blue-300 rounded-full"
      >
        <SVGpostgresql />
      </div>
      <h1 class="font-bold">PostgreSQL</h1>
    </div>
  </div>
</div>
