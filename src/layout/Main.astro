---
import "../styles/global.css";

import Link from "../assets/svg/Link.astro";
import FrontEnd from "../assets/svg/FrontEnd";
import BackEnd from "../assets/svg/BackEnd";
import FullStack from "../assets/svg/FullStack.astro";
import Recent from "../assets/svg/recent.astro";
---

<main class="flex flex-col flex-1 w-full">
  <section
    class="mx-auto grid grid-cols-1 md:grid-cols-3 justify-center items-center gap-4 w-full max-w-[80rem] p-4"
  >
    <div
      class="flex flex-col w-full h-auto col-span-1 border-2 border-gray-500 rounded-md md:col-span-2"
    >
      <div
        class="flex flex-wrap items-center justify-between gap-2 p-2 bg-slate-200 dark:bg-gray-900"
      >
        <div class="flex flex-row items-center gap-2">
          <img
            src="/img/ImgFirstSection.webp"
            alt="ImgFirstSection"
            class="w-16 h-auto"
          />
          <h1 class="text-xl font-bold text-blue-500">
            FernandoCodeDev
            <span class="text-base font-normal text-gray-500">
              First Commit
            </span>
          </h1>
        </div>

        <div class="flex flex-row items-center justify-end gap-2 text-gray-500">
          <p class="">f2025</p>
          <p class="">1 day ago</p>
          <Recent />

        </div>
      </div>
    </div>

    <div class="flex-col hidden col-span-1 md:flex">
      <div class="flex flex-col pb-2 border-b border-gray-400">
        <p class="flex">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolor, sequi
          deserunt ipsum provident minus cumque quisquam vitae perspiciatis
          eveniet commodi nostrum animi, error necessitatibus molestiae nesciunt
          harum exercitationem numquam mollitia.
        </p>

        <div class="flex flex-row gap-2">
          <Link />
          <p class="font-bold text-blue-400">fercode.netlify.app/</p>
        </div>

        <div
          class="md:flex flex-col gap-2 items-start justify-between text-gray-500 max-w-[60rem] hidden"
        >
          <div
            class="flex flex-row gap-2 transition-all duration-700 ease-out cursor-pointer hover:text-blue-400"
          >
            <FrontEnd />
            <p class="">FrontEnd</p>
          </div>
          <div
            class="flex flex-row gap-2 transition-all duration-700 ease-out cursor-pointer hover:text-blue-400"
          >
            <BackEnd />
            <p class="">BackEnd</p>
          </div>

           <div
      class="flex flex-row gap-2 transition-all duration-700 ease-out cursor-pointer hover:text-blue-400"
    >
      <FullStack />
      <p class="">Full-Stack</p>
    </div>
        </div>
      </div>
    </div>
  </section>
</main>
